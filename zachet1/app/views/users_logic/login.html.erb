<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Login</h1>
</div>

<%= form_tag("/auth", :method => "post") do %>
  <div class="container" style="width: 400px;">
    <div class="form-group">
      <%= label_tag "Email" %>
      <%= text_field_tag :email, nil, class: "form-control", required: true, autofocus:true %>
    </div>
    <br>
    <div class="form-group">
      <%= label_tag "Password" %>
      <%= password_field_tag :password, nil, class: "form-control", required: true %>
    </div>
    <br>
    <%= submit_tag "Login", class: "btn btn-primary" %>
    &nbsp;&nbsp;&nbsp;&nbsp;
    or
    &nbsp;&nbsp;&nbsp;&nbsp;
    <a href="/register" class="btn btn-outline-primary">Register</a>
  </div>
<% end %>

<% if @error %>
  <div class="alert alert-warning" style="top: 20px;">
    <%= @error %>
  </div>
<% end %>