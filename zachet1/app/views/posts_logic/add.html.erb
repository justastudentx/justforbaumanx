<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Add an entry</h1>
</div>

<%= form_tag("/new", :method => "post") do %>
  <div class="container" style="width: 400px;">
    <div class="form-group">
      <%= label_tag "Enter post name" %>
      <%= text_field_tag :title, nil, class: "form-control", required: true, autofocus:true %>
    </div>
    <br>
    <div class="form-group">
      <%= label_tag "Enter short description" %>
      <%= text_area_tag :summary, nil, class: "form-control", required: true %>
    </div>
    <br>
    <div class="form-group">
      <%= label_tag "Enter blog" %>
      <%= text_area_tag :main, nil, class: "form-control", required: true %>
    </div>
    <br>
    <%= submit_tag "Add", class: "btn btn-primary" %>
  </div>
<% end %>

<% if @error %>
  <div class="alert alert-warning" style="top: 20px;">
    <%= @error %>
  </div>
<% end %>